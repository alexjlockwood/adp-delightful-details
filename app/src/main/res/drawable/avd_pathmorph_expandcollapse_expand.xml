<animated-vector
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:aapt="http://schemas.android.com/aapt"
  android:drawable="@drawable/vd_pathmorph_expandcollapse_expand">

  <target android:name="chevron_01">
    <aapt:attr name="android:animation">
      <objectAnimator
        android:duration="250"
        android:interpolator="@android:interpolator/fast_out_slow_in"
        android:pathData="M 12.0,15.0 c 0.0,-1.0 0.0,-5.33333 0.0,-6.0"
        android:propertyXName="translateX"
        android:propertyYName="translateY"/>
    </aapt:attr>
  </target>

  <target android:name="rectangle_3">
    <aapt:attr name="android:animation">
      <objectAnimator
        android:duration="200"
        android:interpolator="@interpolator/expandcollapse_expand"
        android:propertyName="rotation"
        android:valueFrom="45.0"
        android:valueTo="-45.0"
        android:valueType="floatType"/>
    </aapt:attr>
  </target>
  <target android:name="rectangle_4">
    <aapt:attr name="android:animation">
      <objectAnimator
        android:duration="200"
        android:interpolator="@interpolator/expandcollapse_expand"
        android:propertyName="rotation"
        android:valueFrom="-45.0"
        android:valueTo="45.0"
        android:valueType="floatType"/>
    </aapt:attr>
  </target>

</animated-vector>