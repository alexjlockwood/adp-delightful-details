<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item
    android:id="@+id/checked"
    android:drawable="@drawable/btn_radio_on_mtrl"
    android:state_checked="true"/>

  <item
    android:id="@+id/unchecked"
    android:drawable="@drawable/btn_radio_off_mtrl"/>

  <transition
    android:drawable="@drawable/avd_widgets_radiobutton_unchecked_to_checked"
    android:fromId="@id/unchecked"
    android:toId="@id/checked"/>

  <transition
    android:drawable="@drawable/avd_widgets_radiobutton_checked_to_unchecked"
    android:fromId="@id/checked"
    android:toId="@id/unchecked"/>

</animated-selector>