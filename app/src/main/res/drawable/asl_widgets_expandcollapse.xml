<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item
    android:id="@+id/expanded"
    android:drawable="@drawable/vd_widgets_expandcollapse_expanded"
    android:state_expanded="true"/>

  <item
    android:id="@+id/collapsed"
    android:drawable="@drawable/vd_widgets_expandcollapse_collapsed"/>

  <transition
    android:drawable="@drawable/avd_widgets_expandcollapse_collapsed_to_expanded"
    android:fromId="@id/collapsed"
    android:toId="@id/expanded"/>

  <transition
    android:drawable="@drawable/avd_widgets_expandcollapse_expanded_to_collapsed"
    android:fromId="@id/expanded"
    android:toId="@id/collapsed"/>

</animated-selector>