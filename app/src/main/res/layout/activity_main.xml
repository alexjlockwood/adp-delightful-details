<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:id="@+id/playpausestop"
      style="@style/MainActivityListItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/play_pause_stop"/>

    <TextView
      android:id="@+id/drawer"
      style="@style/MainActivityListItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/drawer"/>

    <TextView
      android:id="@+id/search"
      style="@style/MainActivityListItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/search_to_back"/>

    <TextView
      android:id="@+id/clippath"
      style="@style/MainActivityListItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/clippath"/>

    <TextView
      android:id="@+id/expandcollapse"
      style="@style/MainActivityListItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/expandcollapse"/>

    <TextView
      android:id="@+id/digits"
      style="@style/MainActivityListItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/digits"/>

    <TextView
      android:id="@+id/clock"
      style="@style/MainActivityListItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/clock"/>

    <TextView
      android:id="@+id/heart"
      style="@style/MainActivityListItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/heart"/>

    <TextView
      android:id="@+id/fingerprint"
      style="@style/MainActivityListItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/fingerprint"/>

    <TextView
      android:id="@+id/uploading"
      style="@style/MainActivityListItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/uploading"/>

    <TextView
      android:id="@+id/googleio"
      style="@style/MainActivityListItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/googleio"/>

    <TextView
      android:id="@+id/handwriting"
      style="@style/MainActivityListItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/handwriting"/>

  </LinearLayout>

</ScrollView>